<ServicesConfiguration>
    <Service name="AuthenticatorWebAuthn" version="1.0">
        <Schema
                serviceHierarchy="/DSAMEConfig/ForgeRockAuthenticatorWebAuthnService"
                i18nFileName="AuthenticatorWebAuthnService"
                revisionNumber="1"
                resourceName="authenticatorWebAuthnService"
                i18nKey="forgerock-auth-authenticator-webauthn-service-description">
            <Organization>

                <AttributeSchema name="iplanet-am-auth-authenticator-webauthn-attr-name"
                                 type="single"
                                 syntax="string"
                                 i18nKey="a100"
                                 order="100"
                                 resourceName="webauthnAttrName">
                    <DefaultValues>
                        <Value>webauthnDeviceProfiles</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-scheme"
                                 type="single_choice"
                                 i18nKey="a101"
                                 order="200"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionScheme">
                    <ChoiceValues>
                        <ChoiceValue i18nKey="RSAES_AES256CBC_HS512">RSAES_AES256CBC_HS512</ChoiceValue>
                        <ChoiceValue i18nKey="RSAES_AES128CBC_HS256">RSAES_AES128CBC_HS256</ChoiceValue>
                        <ChoiceValue i18nKey="None">NONE</ChoiceValue>
                    </ChoiceValues>
                    <DefaultValues>
                        <Value>NONE</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-keystore"
                                 type="single"
                                 syntax="string"
                                 i18nKey="a102"
                                 order="300"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionKeystore">
                    <DefaultValues>
                        <Value>/home/forgerock/openam/am/keystore.jceks</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-keystore-type"
                                 type="single_choice"
                                 i18nKey="a103"
                                 order="400"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionKeystoreType">
                    <ChoiceValues>
                        <ChoiceValue i18nKey="JKS">JKS</ChoiceValue>
                        <ChoiceValue i18nKey="JCEKS">JCEKS</ChoiceValue>
                        <ChoiceValue i18nKey="PKCS11">PKCS11</ChoiceValue>
                        <ChoiceValue i18nKey="PKCS12">PKCS12</ChoiceValue>
                    </ChoiceValues>
                    <DefaultValues>
                        <Value>JCEKS</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-keystore-password"
                                 type="single"
                                 syntax="password"
                                 i18nKey="a104"
                                 order="500"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionKeystorePassword">
                    <DefaultValues>
                        <Value>changeit</Value>
                    </DefaultValues>
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-keypair-alias"
                                 type="single"
                                 syntax="string"
                                 i18nKey="a105"
                                 order="600"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionKeystoreKeyPairAlias">
                </AttributeSchema>

                <AttributeSchema name="openam-auth-authenticator-webauthn-device-settings-encryption-privatekey-password"
                                 type="single"
                                 syntax="password"
                                 i18nKey="a106"
                                 order="700"
                                 resourceName="authenticatorWebAuthnDeviceSettingsEncryptionKeystorePrivateKeyPassword">
                </AttributeSchema>

            </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>
